@model PagerViewModel
@if (Model.EndPage > 1)
{
    <div class="container p-4 d-flex justify-content-center">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName"
                       asp-route-name ="@Model.SearchOption"
                       asp-action="@Model.ActionName">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-name ="@Model.SearchOption"
                       asp-route-currentIndex="@(Model.CurrentPage-1)">Previous</a>
                </li>
            }

            @for (var curPage = Model.StartPage; curPage <= Model.EndPage; curPage++)
            {
                <li class="page-item @(curPage == Model.CurrentPage ? "active" : "")">

                    <a class="page-link" asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-name ="@Model.SearchOption"
                       asp-route-currentIndex="@curPage">@curPage</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-name ="@Model.SearchOption"
                       asp-route-currentIndex="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="@Model.ControllerName"
                       asp-action="@Model.ActionName"
                       asp-route-name ="@Model.SearchOption"
                       asp-route-currentIndex="@Model.TotalPages">Last</a>
                </li>
            }
        </ul>
    </div>
}
