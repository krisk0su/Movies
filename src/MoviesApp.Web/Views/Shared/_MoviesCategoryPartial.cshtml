@model DisplayAllMoviesViewModel
@{
  
}
<div class="container-fluid " style="border: 6px solid black; background-color: black">
    <div class="d-flex justify-content-center">
        <h1 class="col-6 p-2" style="font-family: sans-serif; text-align: center; color: black; background-color: #DAA520; display:inline-block; margin-bottom: 0">Top Rated</h1>
    </div>

    <div class="row">
        @foreach (var movie in Model.Movies)
        {

            <div class="card col-lg-2 col-md-3 col-sm-6 movies">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@movie.Id">
                    <img class="card-img-top d-flex align-items-stretch" src="~/images/thor2.jpg" alt="Card image cap">
                    <div class="card-body d-flex justify-content-center p-0">
                        <h5 class="card-title movie-title">@movie.Name</h5>
                    </div>
                </a>

            </div>
        }
    </div>

</div>