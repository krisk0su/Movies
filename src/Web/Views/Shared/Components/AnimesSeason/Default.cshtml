@model SeasonEntitiesViewModel
<div class="col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Season</th>
                <th scope="col">Episode</th>
                <th scope="col">Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entity in Model.Entities)
            {
                <tr>
                    <th scope="row">@entity.Season</th>
                    <td>
                        @entity.Episode
                    </td>
                    <td>
                        <a asp-controller="AnimesEntities"
                           asp-action="Episode"
                           asp-route-id="@entity.Id"
                           style="color: aliceblue">Watch Episode @entity.Episode</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>